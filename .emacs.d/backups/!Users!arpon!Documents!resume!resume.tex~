\newenvironment{sect}[1]{
  \vspace{20pt}
  \begin{minipage}[t]{0.1\linewidth}
    \raisebox{.2ex}{\textsc{\MakeLowercase{#1}}}
  \end{minipage}
  \hfill
  \begin{minipage}[t]{0.88\linewidth}
}{\end{minipage}}

\newenvironment{subsect}[2]{
  \textbf{#1}%
  \ifthenelse{\equal{#2}{}}{}{, #2}
  \begin{itemize}
}{\end{itemize}}

\newenvironment{subsect-sp}[2]{\begin{subsect}{#1}{#2}}%
  {\end{subsect}\vspace{5pt}}

