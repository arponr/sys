$font-serif: "Times", "Times New Roman", serif;
$font-sans: "Helvetica Neue", "Arial", sans-serif;
$font-mono: monospace;
$font-icon: "entypo";

$size-base: 13px;
$line-base-unitless: 1;
$line-base: $size-base * $line-base-unitless;

$size-big: 17px;

$background: #ffffff;
$warning: #bb0000;

$grey-darker: #393a3b;
$grey-dark: #494a4b;
$grey-medium-dark: #898a8b;
$grey-medium: #a9aaab;
$grey-medium-light: #c9cacb;
$grey-light: #e9eaeb;
$grey-lighter: #f9fafb;
$grey-lightest: #fdfeff;
$white: #ffffff;
$green: #70d0b0;

@mixin placeholder($c) {
    ::-webkit-input-placeholder {
        color: $c;
    }
    ::-moz-placeholder {
        color: $c;
    }
    :-ms-input-placeholder {
        color: $c;
    }
}

@mixin inset-shadow($w, $c) {
    -moz-box-shadow:    inset 0 0 $w $c;
    -webkit-box-shadow: inset 0 0 $w $c;
    box-shadow:         inset 0 0 $w $c;
}

@mixin border-radius($r) {
     -webkit-border-radius: $r;
     -moz-border-radius: $r;
     border-radius: $r;
}

@mixin rounded($c) {
    border: 1px solid $c;
    @include border-radius(0.3rem);
}

@mixin rounded-fill($cb, $cf) {
    background: $cf;
    @include rounded($cb);
}