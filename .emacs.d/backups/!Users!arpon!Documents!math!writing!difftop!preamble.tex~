\theoremstyle{plain}
\newtheorem{thm}{Theorem}[section]
\newtheorem{lem}[thm]{Lemma}
\newtheorem{cor}[thm]{Corollary}
\newtheorem{pro}[thm]{Proposition}
\newtheorem{exe}[thm]{Exercise}

\theoremstyle{definition}
\newtheorem{dfn}[thm]{Definition}
\newtheorem{dfns}[thm]{Definitions}
\newtheorem{ntn}[thm]{Notation}
\newtheorem{ntns}[thm]{Notations}
\newtheorem{sit}[thm]{Situation}
\newtheorem{exa}[thm]{Example}
\newtheorem{exas}[thm]{Examples}
\newtheorem{rem}[thm]{Remark}
\newtheorem{rems}[thm]{Remarks}
\newtheorem*{sol}{Solution}

\makeatletter 
\renewenvironment{proof}[1][\proofname]
{\par\pushQED{\qed}\normalfont\topsep6\p@\@plus6\p@\relax\trivlist\item[\hskip\labelsep\bfseries#1\@addpunct{.}]\ignorespaces}{\popQED\endtrivlist\@endpefalse} 
\makeatother

\newenvironment{alphenum}{
\begin{enumerate}[leftmargin = 0pt, itemindent = 23pt, 
  itemsep = \medskipamount, label = {\bfseries(\alph*).}]}
{\end{enumerate}}

