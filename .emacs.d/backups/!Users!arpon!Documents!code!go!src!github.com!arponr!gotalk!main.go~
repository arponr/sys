package main

import (
	"database/sql"
	"html/template"
	"log"
	"net/http"
	"os"

	"code.google.com/p/go.net/websocket"
	"github.com/gorilla/securecookie"
	"github.com/gorilla/sessions"
	_ "github.com/lib/pq"
)

var (
	rootTemplate  = template.Must(template.ParseFiles("root.html"))
	loginTemplate = template.Must(template.ParseFiles("login.html"))
)

func main() {
	// url := "postgres://localhost:5432/testdb?sslmode=disable"
	db, err := sql.Open("postgres", os.Getenv("DATABASE_URL"))
	if err != nil {
		log.Fatal(err)
	}

	store = sessions.NewCookieStore(
		securecookie.GenerateRandomKey(64), securecookie.GenerateRandomKey(64))

	http.HandleFunc("/", handler(root))
	http.HandleFunc("/login", contextHandler(login))
	http.HandleFunc("/register", contextHandler(register))
	http.Handle("/socket", websocket.Handler(socketHandler))
	http.Handle("/static/", http.FileServer(http.Dir(".")))

	err = http.ListenAndServe(":"+os.Getenv("PORT"), nil)
	if err != nil {
		log.Fatal(err)
	}
}

func root(w http.ResponseWriter, r *http.Request) error {
	return rootTemplate.Execute(w, nil)
}
