\theoremstyle{plain}
\newtheorem{lemma}{Lemma}

\makeatletter
\renewenvironment{proof}[1][\proofname]{
  \par\pushQED{\qed}
  \normalfont
  \topsep6\p@\@plus6\p@\relax
  \trivlist\item[\hskip\labelsep\bfseries#1\@addpunct{.}]\ignorespaces
}{\popQED\endtrivlist\@endpefalse}
\makeatother

