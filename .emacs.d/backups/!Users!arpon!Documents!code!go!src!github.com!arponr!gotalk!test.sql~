CREATE TABLE a (
       a_id   serial PRIMARY KEY,
       a_name varchar(80) NOT NULL
);

CREATE TABLE b (
       b_id   serial PRIMARY KEY,
       b_name varchar(80) NOT NULL
);

CREATE TABLE a_b (
       a_id       int references a ON UPDATE CASCADE ON DELETE CASCADE,
       b_id       int references b ON UPDATE CASCADE ON DELETE CASCADE,
       a_b_name   varchar(80),
       CONSTRAINT a_b_pk PRIMARY KEY (a_id, b_id)
);

INSERT INTO a (a_name)
       VALUES ('a1'), ('a2'), ('a3');

INSERT INTO b (b_name)
       VALUES ('b1'), ('b2'), ('b3');

INSERT INTO a_b (a_id, b_id, a_b_name)
       VALUES (1, 1, 'a1b1'), (2, 2, 'a2b2'), (3, 3, 'a3b3'), (1, 2, 'a1b2');

SELECT * from a_b;

SELECT b_id, a_b_name from a_b
       WHERE a_id = 1;
