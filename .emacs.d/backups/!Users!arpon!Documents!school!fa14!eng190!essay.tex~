\documentclass[12pt]{amsart}

\usepackage[margin=1in]{geometry}
\usepackage{fancyhdr}
\usepackage{microtype}
\usepackage{amssymb}
\usepackage[hyphens]{url}
\usepackage{enumitem}
\usepackage{setspace}
\usepackage{titlesec}

\usepackage{fontspec}
\usepackage{newtxtext}
\defaultfontfeatures{Mapping=tex-text}
\setmonofont[Scale=MatchLowercase]{Menlo}

\frenchspacing

\pagestyle{empty}

\renewcommand{\title}[1]{\newcommand{\thetitle}{#1}}
\renewcommand{\author}[1]{\newcommand{\theauthor}{#1}}
\renewcommand{\date}[1]{\newcommand{\thedate}{#1}}

\renewcommand{\maketitle}{%
  \thispagestyle{empty}
  \begin{center}
    $if(title)$
      {\bfseries \MakeUppercase{$title$}} \\
      \smallskip
    $endif$
    {\footnotesize
    $if(course)$
      \MakeUppercase{$course$} $$\cdot$$
    $endif$
    $if(assignment)$
      \MakeUppercase{$assignment$} $$\cdot$$
    $endif$
    $if(date)$
      \MakeUppercase{$date$}
    $else$
      \MakeUppercase{\today}
    $endif$\\
    \medskip
    \MakeUppercase{Arpon Raksit}
    }
  \end{center}
  \bigskip
}

\titleformat{\section}{\centering\scshape}{}{0pt}{}
\titlespacing{\section}{0pt}{10pt}{5pt}

\setlist{leftmargin=*}
\renewcommand{\labelitemi}{$$\vcenter{\hbox{\footnotesize$$\bullet$$}}$$}
\renewcommand{\labelitemii}{--}

\begin{document}
\maketitle

\doublespacing

$body$

\end{document}
