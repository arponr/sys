(add-to-list 'auto-mode-alist '("\\.tex\\'" . latex-mode))
(load "auctex.el" nil t t)
(add-hook 'LaTeX-mode-hook
          (lambda ()
            (set-face-foreground 'font-latex-string-face "#888888")
            (set-face-foreground 'font-latex-italic-face "#888888")
            (set-face-foreground 'font-latex-sedate-face "#555555")
            (set-face-foreground 'font-latex-math-face   "#90aa90")
            (set-face-attribute  'font-latex-warning-face nil
                                 :foreground "#eeeeee" :weight 'normal)
            (set-face-attribute  'font-latex-sectioning-2-face nil
                                 :foreground "#888888" :family "Menlo" :height 110 :weight 'normal)
            (set-face-attribute  'font-latex-sectioning-3-face nil
                                 :foreground "#888888" :family "Menlo" :height 110 :weight 'normal)

            (global-set-key "\C-c \C-o" 'tex-latex-block)
            (global-set-key "\C-c \C-e" 'tex-close-latex-block)))
